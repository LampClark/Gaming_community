<h1>Create a new discussion</h1>

<%= form_for @discussion, html: { class: "discussion-form" } do |f| %>
    <div>
        <%= f.label :title, "Title:" %>
        <%= f.text_field :title, placeholder: "Enter title" %>
    </div>

    <div>
        <br>
        <%= f.text_area :description, placeholder: "Description...", style: "height: 136px; width: 337px"  %>
    </div>

    <div>
        <%= f.label :attachments, "Drag and drop" %>
        <%= f.file_field :attachments, multiple: true %>
    </div>

    <div>
        <%= f.submit "Create Discussion" %>
    </div>
<% end %>