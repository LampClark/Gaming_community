<% if @discussion.persisted? %>
  <h1 class="discussion-title">Edit Discussion</h1>
<% else %>
  <h1 class="discussion-title">Create a new discussion</h1>
<% end %>

<%= form_for @discussion, url: @discussion.persisted? ? strategy_path(@discussion) : strategies_path, html: { class: "discussion-form" } do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title, placeholder: "Enter title", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Description:" %>
    <%= f.text_area :description, placeholder: "Enter description", class: "form-textarea" %>
  </div>

  <div class="form-group">
    <%= f.label :attachments, "Click or Drag to Upload Files:" %>
    <%= f.file_field :attachments, multiple: true, class: "form-input" %>
  </div>

  <div class="form-group">
    <% if @discussion.persisted? %>
        <%= link_to "Back", strategy_path(@discussion), class: "back-link" %>
        <%= f.submit "Edit Discussion", class: "form-submit-button" %>
    <% else %>
        <%= link_to "Back", strategies_path, class: "back-link" %>
        <%= f.submit "Create Discussion", class: "form-submit-button" %>
    <% end %>
  </div>
<% end %>
