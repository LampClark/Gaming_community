<title>Profile</title>

<div class="profile-box">
    <h1 class="profile-heading">Profile</h1>
    <p class="profile-info">Name: <%= @user.username %></p>
    
    <%= link_to "Edit", edit_profile_path(@user), class: "edit-link" if current_user == @user %>
</div>

<h2 class="discussion-heading">Discussions</h2>
<ul class="discussion-list">
    <% @user.discussions.each do |discussion| %>
    <li class="discussion-item">
        <div class="discussion-box">
            <strong class="discussion-title">Title:</strong>
            <%= link_to discussion.title, discussion_path(discussion), class: "discussion-link" %><br>
            <strong class="discussion-owner">Owner:</strong> <%= discussion.user.username %>
        </div>
    </li>
    <% end %>
</ul>

<h2 class="post-heading">Posts</h2>
<ul class="post-list">
    <% @user.posts.each do |post| %>
    <li class="post-item">
        <div class="post-box">
            <strong class="post-discussion-title">Discussion Title:</strong>
            <%= link_to post.discussion.title, discussion_path(post.discussion), class: "discussion-link" %><br>
            <strong class="post-content">Content:</strong> <%= post.content %><br>
            <strong class="post-owner">Owner:</strong> <%= post.user.username %>
        </div>
    </li>
    <% end %>
</ul>